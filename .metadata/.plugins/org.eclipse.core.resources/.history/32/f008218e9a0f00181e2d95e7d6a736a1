
public class Solution8 {

	public static void main(String[] args) {
		String input = "212510";
		System.out.println(numDecodeWay(input));
	}

	  //approach: solve the problem with DFS.
	  public int numDecodeWay(String s) {
	    if (s == null || s.length() == 0) {
	      return 0;
	    }
	    int[] res = new int[]{0};
	    checkChar(s, 0, res);
	    return res[0];
	  }
	  
	  private void checkChar(String s, int index, int[] res) {
	    if (index >= s.length()) {
	      res[0]++;
	    }
	    char single = s.charAt(index);
	    if(single > '0' && single <= '9') {
	      checkChar(s, index + 1, res);
	      if (index < s.length() - 1 && Integer.valueOf(s.charAt(index) + s.charAt(index + 1)) <= 26) {
	        checkChar(s, index + 2, res);
	      }
	    }
	  }
}
