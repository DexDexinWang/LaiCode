	}
	
	private static void swaplenth(char[] array, int i, int j) {
		while (i < j) {
			swap(array, i++, j++);
		}
	}
	
	private static void swap (char[] array, int i, int j) {
		char temp = array[i];
		array[i] = array[j]; 
		array[j] = temp;
	}
}
