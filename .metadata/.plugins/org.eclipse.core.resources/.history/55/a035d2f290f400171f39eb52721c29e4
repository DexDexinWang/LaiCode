import generator.LinkedListRandom;
import generator.ListNode;

public class Solution6 {

	public static void main(String[] args) {
		ListNode input = LinkedListRandom.LLGen(7, 0, 2);
		input.print();
		input = rotateKplace(input,3);
		System.out.println("");
		input.print();
	}
	
	public static ListNode rotateKplace(ListNode head, int k) {
	    int counter = 1;
	    int fast = head;
	    while (fast.next != null && counter < k) {
	      fast = fast.next;
	      counter++;
	    }
	    if (counter < k) {
	      return head;
	    }
	    ListNode dummy = new ListNode(-1);
	    dummy.next = head;
	    ListNode slow = dummy;
	    while (fast.next == null) 
	      fast = fast.next;
	      slow = slow.next;
	    }
	    slow.next = null;
	    fast.next = head;
	    return slow;
	}
}
