import java.util.ArrayList;
import java.util.List;

public class Deck {
	private final List<Card> deck;
	
	public Deck(){
		deck = new ArrayList<>();
		for (int i = 1; i <= 13; i++) {
			for(Suit suit: Suit.values()) {
				deck.add(new Card(suit, i));
			}
		}
	}
	
	public void shuffle() {
		for(int i = 0; i < deck.size() ; i++) {
			
		}
	}
}
