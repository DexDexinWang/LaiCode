
public class Solution7 {
	private int[] array;
	private int size;
	
	public Solution7(int[] array) {
		if (array == null || array.length == 0) {
			throw new IllegalArgumentException("input array cannot be null or empty");
		}
		this.array = array;
		size =array.length;
		heapify();
	}
	
	private void heapify() {
		
	}
	
	public Solution7(int cap) {
		if (cap <= 0) {
			throw new IllegalArgumentException("input array cannot be null or empty");
		}
		array = new int[cap];
		size = 0;
	}
	
}
