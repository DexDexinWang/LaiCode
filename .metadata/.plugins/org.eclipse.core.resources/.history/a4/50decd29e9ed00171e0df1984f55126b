import generator.ListNode;
import generator.LinkedListRandom;
public class Solution1 {

	public static void main(String[] args) {
		ListNode input = LinkedListRandom.LLGen(10, 0, 11);
		input.print();
		System.out.println();
		selectionSort(input).print();
	}
	
	public static ListNode selectionSort(ListNode head) {
		//handle the head pointer
		ListNode dummy = new ListNode(-1);
		dummy.next = head;
		//headle the current pointer
		ListNode outLoopHead= dummy;
		while(outLoopHead.next != null) {
			ListNode min = outLoopHead.next;
			ListNode inLoopHead = min;
			while(inLoopHead.next != null) {
				if (inLoopHead.next.value < min.value) {
					swap(inLoopHead, min);
				}
			}
			swap(outLoopHead, min);
		}
		
	}
	
	private static void swap(ListNode previous, ListNode min) {
		ListNode temp = previous.next;
		previous.next = min;
		min.next = temp.next;
		temp.next = null;
		min = temp;
	}

}
