import generator.ListNode;
import generator.LinkedListRandom;
public class Solution1 {

	public static void main(String[] args) {
		ListNode input = LinkedListRandom.LLGen(5, 0, 100);
		input.print();
		reverseKGroup(input,3);
		input.print();
	}
	
	public static ListNode reverseKGroup(ListNode head, int k) {
		int counter = 0;
		ListNode dummy = new ListNode(-1);
		dummy.next = head;
		ListNode current = dummy; 
		ListNode check = head;
		while(check != null && counter < k) {
			check = check.next;
			counter++;
			if (counter == k) {
				current.next = reverse(current.next, check);
				counter =0;
			}
		}
		return dummy.next;
	}

	private static ListNode reverse(ListNode head, ListNode end) {
		ListNode newHead = null;
		while (head != end) {
			ListNode temp = head.next;
			head.next = newHead;
			newHead = head;
			head = temp;
		}
		return newHead;
	}

}
