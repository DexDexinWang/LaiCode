	public static String longestPalindrome(String s) {
		if (s == null || s.length() <= 1) {
			return s;
		}
		for(int i = 0 ; i < s.length() - 1; i++) {
			longestPalindrome(s, i, i);
			longestPalindrome(s, i, i + 1);
		}
		return s.substring(begin, begin + max);
	}

