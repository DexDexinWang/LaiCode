import java.util.Collections;

public class ParkingLot {
	private final ParkingLevel[] levels;
	
	ParkingLot(int numLevels, int numSpotsPerLevel) {
		ParkingLevel[] levelsTemp = new ParkingLevel[numLevels];
		for (int i = 0; i < numLevels; i++) {
			levelsTemp[i] = new ParkingLevel(numSpotsPerLevel);
		}
		levels = Collections.unmodifiableCollection(levelsTemp);
	}
	
	public boolean hasSport(Vehicle v) {
		for (ParkingLevel level: levels) {
			if (level.hasSport(v)) {
				return true;
			}
		}
		 return false;
	}
}
