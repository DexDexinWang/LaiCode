
public class Solution2 {

	public static void main(String[] args) {
		System.out.println(diffBits(16, 8));
		System.out.println(count(15));
	}

	public static int diffBits(int a, int b) {
		return count(a ^ b);
	}
	
	private static int count(int n) {
		int counter = 0;
		while (n > 0) {
			counter += (counter & 1);
			n >>= 1;
		}
		return counter;
	}
	
	private static int count1(int number) {
		int counter = 0;
		while (number > 0) {
			counter += (number & 1);
			number = number >> 1;
		}
		return  counter;
	}
}
